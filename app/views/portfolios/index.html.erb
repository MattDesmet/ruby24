<h1>Portfolio Index Page</h1>

<a href="/portfolios/new">Create New Simple Link</a><br><br>

<%= link_to "Create New Using link_to", new_portfolio_path%>

<p>
  <%= new_portfolio_path %>
</p>
<br>
<p>
  <%= new_portfolio_url %>
</p>



<% @portfolio_items.each do |portfolio_item| %>
  <p><%= portfolio_item.title%></p>
  <p><%= portfolio_item.subtitle%></p>
  <p><%= portfolio_item.body%></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit #{portfolio_item.title}", edit_portfolio_path(portfolio_item.id)%>
  <%end%>
